*
    color code
    white 1
    red 2
    green 3
    orange 4
    blue 5
    yellow 6
 */
void face5(int *a,int b) {/*blue*/
	int s1,s2,s3,s4,s5,s6,s7,s8,s9,s10,s11,s12;
	if(b==0) {
		for (int i=0;i<=6;i=i+3) {
			s1=*(a-27+i);
			s2=*(a-36+i);
			s3=*(a-9+i);
			s4=*(a+17-i);
			*(a-27+i)=s4;
			*(a-36+i)=s1;
			*(a-9+i)=s2;
			*(a+17-i)=s3;
		}
		s5=*(a);
		s6=*(a+1);
		s7=*(a+2);
		s8=*(a+3);
		s9=*(a+5);
		s10=*(a+6);
		s11=*(a+7);
		s12=*(a+8);
		*(a)=s10;
		*(a+1)=s8;
		*(a+2)=s5;
		*(a+3)=s11;
		*(a+5)=s6;
		*(a+6)=s12;
		*(a+7)=s9;
		*(a+8)=s7;
	} else {
		for (int i=0;i<=6;i=i+3) {
			s1=*(a-27+i);
			s2=*(a-36+i);
			s3=*(a-9+i);
			s4=*(a+17-i);
			*(a-27+i)=s2;
			*(a-36+i)=s3;
			*(a-9+i)=s4;
			*(a+17-i)=s1;
		}
		s5=*(a);
		s6=*(a+1);
		s7=*(a+2);
		s8=*(a+3);
		s9=*(a+5);
		s10=*(a+6);
		s11=*(a+7);
		s12=*(a+8);
		*(a)=s7;
		*(a+1)=s9;
		*(a+2)=s12;
		*(a+3)=s6;
		*(a+5)=s11;
		*(a+6)=s5;
		*(a+7)=s8;
		*(a+8)=s12;
	}
}
void face2(int *a,int b) {/*red*/
	int s1,s2,s3,s4,s5,s6,s7,s8,s9,s10,s11,s12;
	if(b==0) {
		for (int i=0;i<3;i=i+1) {
			s1=*(a+9+i);
			s2=*(a-9+i);
			s3=*(a+27+i);
			s4=*(a+36+i);
			*(a+9+i)=s4;
			*(a-9+i)=s1;
			*(a+27+i)=s2;
			*(a+36+i)=s3;
		}
		s5=*(a);
		s6=*(a+1);
		s7=*(a+2);
		s8=*(a+3);
		s9=*(a+5);
		s10=*(a+6);
		s11=*(a+7);
		s12=*(a+8);
		*(a)=s10;
		*(a+1)=s8;
		*(a+2)=s5;
		*(a+3)=s11;
		*(a+5)=s6;
		*(a+6)=s12;
		*(a+7)=s9;
		*(a+8)=s7;
	} else {
		for (int i=0;i<3;i=i+1) {
			s1=*(a+9+i);
			s2=*(a-9+i);
			s3=*(a+27+i);
			s4=*(a+36+i);
			*(a+9+i)=s2;
			*(a-9+i)=s3;
			*(a+27+i)=s4;
			*(a+36+i)=s1;
		}
		s5=*(a);
		s6=*(a+1);
		s7=*(a+2);
		s8=*(a+3);
		s9=*(a+5);
		s10=*(a+6);
		s11=*(a+7);
		s12=*(a+8);
		*(a)=s7;
		*(a+1)=s9;
		*(a+2)=s12;
		*(a+3)=s6;
		*(a+5)=s11;
		*(a+6)=s5;
		*(a+7)=s8;
		*(a+8)=s10;
	}
}
void face3(int *a,int b) {/*green*/
	int s1,s2,s3,s4,s5,s6,s7,s8,s9,s10,s11,s12;
	if(b==0) {
		for (int i=0;i<=6;i=i+3) {
			s1=*(a+11+i);
			s2=*(a-16+i);
			s3=*(a-7+i);
			s4=*(a+33-i);
			*(a+11+i)=s4;
			*(a-16+i)=s1;
			*(a-7+i)=s2;
			*(a+33-i)=s3;
		}
		s5=*(a);
		s6=*(a+1);
		s7=*(a+2);
		s8=*(a+3);
		s9=*(a+5);
		s10=*(a+6);
		s11=*(a+7);
		s12=*(a+8);
		*(a)=s10;
		*(a+1)=s8;
		*(a+2)=s5;
		*(a+3)=s11;
		*(a+5)=s6;
		*(a+6)=s12;
		*(a+7)=s9;
		*(a+8)=s7;
	} else {
		for (int i=0;i<=6;i=i+3) {
			s1=*(a+11+i);
			s2=*(a-16+i);
			s3=*(a-7+i);
			s4=*(a+33-i);
			*(a+11+i)=s2;
			*(a-16+i)=s3;
			*(a-7+i)=s4;
			*(a+33-i)=s1;
		}
		s5=*(a);
		s6=*(a+1);
		s7=*(a+2);
		s8=*(a+3);
		s9=*(a+5);
		s10=*(a+6);
		s11=*(a+7);
		s12=*(a+8);
		*(a)=s7;
		*(a+1)=s9;
		*(a+2)=s12;
		*(a+3)=s6;
		*(a+5)=s11;
		*(a+6)=s5;
		*(a+7)=s8;
		*(a+8)=s10;
	}
}
void face4(int *a,int b) {/*orange*/
	int s1,s2,s3,s4,s5,s6,s7,s8,s9,s10,s11,s12;
	if(b==0) {
		for (int i=0;i<=2;i=i+1) {
			s1=*(a+15+i);
			s2=*(a-21+i);
			s3=*(a-3+i);
			s4=*(a+24+i);
			*(a+15+i)=s4;
			*(a-21+i)=s1;
			*(a-3+i)=s2;
			*(a+24+i)=s3;
		}
		s5=*(a);
		s6=*(a+1);
		s7=*(a+2);
		s8=*(a+3);
		s9=*(a+5);
		s10=*(a+6);
		s11=*(a+7);
		s12=*(a+8);
		*(a)=s10;
		*(a+1)=s8;
		*(a+2)=s5;
		*(a+3)=s11;
		*(a+5)=s6;
		*(a+6)=s12;
		*(a+7)=s9;
		*(a+8)=s7;
	} else {
		for (int i=0;i<=2;i=i+1) {
			s1=*(a+15+i);
			s2=*(a-21+i);
			s3=*(a-3+i);
			s4=*(a+24+i);
			*(a+15+i)=s2;
			*(a-21+i)=s3;
			*(a-3+i)=s4;
			*(a+24+i)=s1;
		}
		s5=*(a);
		s6=*(a+1);
		s7=*(a+2);
		s8=*(a+3);
		s9=*(a+5);
		s10=*(a+7);
		s11=*(a+7);
		s12=*(a+8);
		*(a)=s7;
		*(a+1)=s9;
		*(a+2)=s12;
		*(a+3)=s6;
		*(a+5)=s11;
		*(a+6)=s5;
		*(a+7)=s8;
		*(a+8)=s10;
	}
}
void face6(int *a,int b)
/*verified*/ {/*yellow*/
	/* valid for all top right
       if reversed
       valid for all top left
    */
	int s1,s2,s3,s4,s5,s6,s7,s8,s9,s10,s11,s12;
	if (b==1) {
		for (int i=0;i<=6;i=i+3) {
			s1=*(a-36+i/3);
			s2=*(a-25+i);
			s3=*(a-10-i/3);
			s4=*(a-3-i);
			*(a-36+i/3)=s4;
			*(a-25+i)=s1;
			*(a-10-i/3)=s2;
			*(a-3-i)=s3;
		}
		s5=*(a);
		s6=*(a+1);
		s7=*(a+2);
		s8=*(a+3);
		s9=*(a+5);
		s10=*(a+6);
		s11=*(a+7);
		s12=*(a+8);
		*(a)=s7;
		*(a+1)=s9;
		*(a+2)=s12;
		*(a+3)=s6;
		*(a+5)=s11;
		*(a+6)=s5;
		*(a+7)=s8;
		*(a+8)=s10;
	} else {
		for (int i=0;i<=6;i=i+3) {
			s1=*(a-36+i/3);
			s2=*(a-25+i);
			s3=*(a-10-i/3);
			s4=*(a-3-i);
			*(a-36+i/3)=s2;
			*(a-25+i)=s3;
			*(a-10-i/3)=s4;
			*(a-3-i)=s1;
		}
		s5=*(a);
		s6=*(a+1);
		s7=*(a+2);
		s8=*(a+3);
		s9=*(a+5);
		s10=*(a+6);
		s11=*(a+7);
		s12=*(a+8);
		*(a)=s10;
		*(a+1)=s8;
		*(a+2)=s5;
		*(a+3)=s11;
		*(a+5)=s6;
		*(a+6)=s12;
		*(a+7)=s9;
		*(a+8)=s7;
	}
}
void face1(int *a,int b) {/*white*/
	/* valid for all top right
       if reversed
       valid for all top left
    */
	int s1,s2,s3,s4,s5,s6,s7,s8,s9,s10,s11,s12;
	if (b==0) {
		for (int i=0;i<=6;i=i+3) {
			s1=*(a+15+i/3);
			s2=*(a+18+i);
			s3=*(a+29-i/3);
			s4=*(a+44-i);
			*(a+15+i/3)=s4;
			*(a+18+i)=s1;
			*(a+29-i/3)=s2;
			*(a+44-i)=s3;
		}
		s5=*(a);
		s6=*(a+1);
		s7=*(a+2);
		s8=*(a+3);
		s9=*(a+5);
		s10=*(a+6);
		s11=*(a+7);
		s12=*(a+8);
		*(a)=s10;
		*(a+1)=s8;
		*(a+2)=s5;
		*(a+3)=s11;
		*(a+5)=s6;
		*(a+6)=s12;
		*(a+7)=s9;
		*(a+8)=s7;
	} else {
		for (int i=0;i<=6;i=i+3) {
			s1=*(a+15+i/3);
			s2=*(a+18+i);
			s3=*(a+29-i/3);
			s4=*(a+44-i);
			*(a+15+i/3)=s2;
			*(a+18+i)=s3;
			*(a+29-i/3)=s4;
			*(a+44-i)=s1;
		}
		s5=*(a);
		s6=*(a+1);
		s7=*(a+2);
		s8=*(a+3);
		s9=*(a+5);
		s10=*(a+6);
		s11=*(a+7);
		s12=*(a+8);
		*(a)=s7;
		*(a+1)=s9;
		*(a+2)=s12;
		*(a+3)=s6;
		*(a+5)=s11;
		*(a+6)=s5;
		*(a+7)=s8;
		*(a+8)=s10;
	}
}
